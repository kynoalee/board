<!-- views/users/edit.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h3 class="mb-3">Edit User</h3>

      <form action="/users/<%= userid %>?_method=put" method="post"> <!-- 1 -->

        <div class="form-group row">
          <label class="col-sm-3 col-form-label">ID</label>
          <div class="col-sm-9">
            <label class="col-form-label"><%= user.userid %></label>
          </div>
        </div>
        <div class="form-group row">
          <label for="password" class="col-sm-3 col-form-label">New Password</label>
          <div class="col-sm-9 col-sm-offset-3">
            <input type="password" id="password" name="password" value="" class="form-control <%= (errors.password)?'is-invalid':'' %>"> <!-- 2 -->
            <% if(errors.password){ %> <!-- 3 -->
              <span class="invalid-feedback"><%= errors.password.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row">
          <label for="passwordConfirmation" class="col-sm-3 col-form-label">Password Confirmation</label>
          <div class="col-sm-9 col-sm-offset-3">
            <input type="password" id="passwordConfirmation" name="passwordConfirmation" value="" class="form-control <%= (errors.passwordConfirmation)?'is-invalid':'' %>"> <!-- 2 -->
            <% if(errors.passwordConfirmation){ %> <!-- 3 -->
              <span class="invalid-feedback"><%= errors.passwordConfirmation.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row">
          <label for="name" class="col-sm-3 col-form-label">Name</label>
          <div class="col-sm-9">
            <input type="text" id="name" name="name" value="<%= user.name %>" class="form-control <%= (errors.name)?'is-invalid':'' %>"> <!-- 2 -->
            <% if(errors.name){ %> <!-- 3 -->
              <span class="invalid-feedback"><%= errors.name.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row">
          <label for="company" class="col-sm-3 col-form-label">Company</label>
          <div class="col-sm-9 col-sm-offset-3">
            <input type="company" id="company" name="company" value="<%=user.company%>" class="form-control <%= (errors.company)?'is-invalid':'' %>"> <!-- 2 -->
            <% if(errors.company){ %> <!-- 3 -->
              <span class="invalid-feedback"><%= errors.company.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row">
          <label for="contactnumber" class="col-sm-3 col-form-label">Contact Number</label>
          <div class="col-sm-2" style="margin-right:0">
            <select class="form-control" name="countrycode" id="countrycode">
              <option value="">Country Code</option>
              <option value="86" <%=user.countrycode=='86'?"selected":""%>>+86(CN)</option>
              <option value="82" <%=user.countrycode=='82'?"selected":""%></option>>+82(KR)</option>
            </select>
          </div>
          <div class="col-sm-7">
            <input type="text" id="contactnumber" name="contactnumber" value="<%= user.contactnumber %>" class="form-control <%= (errors.contactnumber)?'is-invalid':'' %>" onkeydown="initiateError('contactnumber')"> <!-- 1, 2 -->
            <% if(errors.contactnumber){ %> <!-- 3 -->
              <span class="invalid-feedback"><%= errors.contactnumber.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row">
          <label for="email" class="col-sm-3 col-form-label">Email</label>
          <div class="col-sm-9">
            <input type="text" id="email" name="email" value="<%= user.email %>" class="form-control <%= (errors.email)?'is-invalid':'' %>"> <!-- 2 -->
            <% if(errors.email){ %> <!-- 3 -->
              <span class="invalid-feedback"><%= errors.email.message %></span>
            <% } %>
          </div>
        </div>

        <% if(errors.unhandled){ %> <!-- 4 -->
          <div class="alert alert-danger">
            <%= errors.unhandled %>
          </div>
        <% } %>

        <div class="buttons">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>

      </form>

    </div>
  </body>
</html>
